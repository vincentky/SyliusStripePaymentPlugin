{% set state_to_colors_map = {
    new: 'teal',
    active: 'blue',
    paused: 'yellow',
    processing: 'violet',
    canceled: 'red',
    completed: 'green',
    aborted: 'red'
} %}
{% set state_to_icons_map = {
    new: 'eye',
    active: 'forward',
    paused: 'pause',
    processing: 'sync',
    canceled: 'stop circle',
    completed: 'check',
    aborted: 'stop'
} %}
<span class="ui label {{ state_to_colors_map[data] | default('grey') }}{% if attached is defined and attached == true %} top attached{% endif %}">
    <i class="icon {{ state_to_icons_map[data] | default('exclamation') }}"></i>
    {{ ('sylius_stripe_payment_plugin.ui.subscription.state.' ~ data) | trans }}
</span>
